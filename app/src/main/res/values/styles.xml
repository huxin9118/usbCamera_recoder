<resources>

    <!-- Base application theme. -->
    <style name="LocalUVCPreviewTheme" parent="Theme.AppCompat.Light">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="colorPrimary">@color/lighter_gray</item>
        <item name="colorPrimaryDark">@color/lighter_gray</item>
        <item name="colorAccent">@color/accent_material_light</item>

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="FileListTheme" parent="Theme.AppCompat.Light">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="colorPrimary">@color/lighter_gray</item>
        <item name="colorPrimaryDark">@color/lighter_gray</item>
        <item name="colorAccent">@color/accent_material_light</item>

        <item name="windowActionModeOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="OpenGLTheme" parent="Theme.AppCompat.Light">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/accent_material_light</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="NoBackDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@color/half_transparent_white</item>
    </style>
</resources>
